<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".WriteReviewActivity">

    <Button
        android:id="@+id/btn_writeFinish"
        android:layout_width="108dp"
        android:layout_height="37dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/round_backgroud_border_black"
        android:backgroundTint="#FFFFFF"
        android:text="완료"
        android:textColor="#F47210"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reviewText" />

    <RatingBar
        android:id="@+id/rb_reviewRating"
        style="@android:style/Widget.DeviceDefault.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="#F4F47210"
        android:rating="3"
        android:secondaryProgressTint="#F4F47210"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_reviewText"
        android:layout_width="370dp"
        android:layout_height="280dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="리뷰를 작성해주세요"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rb_reviewRating" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="82dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:text="사진 첨부하기"
        app:layout_constraintEnd_toEndOf="@+id/iv_reviewImageInsert"
        app:layout_constraintStart_toStartOf="@+id/iv_reviewImageInsert"
        app:layout_constraintTop_toBottomOf="@+id/iv_reviewImageInsert" />

    <ImageView
        android:id="@+id/iv_reviewImageInsert"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reviewText"
        app:srcCompat="@drawable/imgsearch"
        tools:srcCompat="@drawable/imgsearch" />

</androidx.constraintlayout.widget.ConstraintLayout>