<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_logo3"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="21dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logocolor2" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo3"
        app:srcCompat="@drawable/simple_line" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="0dp"
        android:layout_height="581dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:text="정확도 : 96.5%"
                android:textColor="#171717"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView12" />

            <TextView
                android:id="@+id/tv_acc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="정확도 : 96.5%"
                android:textColor="#FF9800"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_acc" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
                app:srcCompat="@drawable/simple_line" />

            <Button
                android:id="@+id/btn_foodLike"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/like_state"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_srchResultImage" />

            <Button
                android:id="@+id/btn_review2"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bubble"
                app:layout_constraintEnd_toStartOf="@+id/btn_foodsave"
                app:layout_constraintStart_toEndOf="@+id/btn_foodLike"
                app:layout_constraintTop_toBottomOf="@+id/iv_srchResultImage" />

            <ImageView
                android:id="@+id/iv_srchResultImage"
                android:layout_width="345dp"
                android:layout_height="259dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/salmon"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/btn_after2"
                app:layout_constraintStart_toEndOf="@+id/btn_before2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/selectableItemBackgroundBorderless" />

            <Button
                android:id="@+id/btn_before2"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/next1"
                app:layout_constraintBottom_toBottomOf="@+id/iv_srchResultImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_srchResultImage" />

            <Button
                android:id="@+id/btn_after2"
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/next2"
                app:layout_constraintBottom_toBottomOf="@+id/iv_srchResultImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_srchResultImage" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_howMuchLikes"
                app:srcCompat="@drawable/simple_line" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_howMuchLikes"
                app:srcCompat="@drawable/simple_line" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultResHour"
                app:srcCompat="@drawable/simple_line" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="130dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultResHour"
                app:srcCompat="@drawable/simple_line" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="414dp"
                android:layout_height="350dp"
                android:background="#37F47210"
                android:backgroundTint="#37F47210"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView9">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_srchResultRelatedImage3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_srchResultRelatedImage2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_srchResultRelatedImage2"
                        app:layout_constraintTop_toTopOf="@+id/iv_srchResultRelatedImage2"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_srchResultRelatedImage1"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="70dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_srchResultRelatedImage2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="30dp"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_srchResultRelatedImage1"
                        app:layout_constraintStart_toEndOf="@+id/iv_srchResultRelatedImage1"
                        app:layout_constraintTop_toTopOf="@+id/iv_srchResultRelatedImage1"
                        app:layout_constraintVertical_bias="0.0"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/tv_srchResultRelatedImage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="@+id/iv_srchResultRelatedImage1"
                        app:layout_constraintStart_toStartOf="@+id/iv_srchResultRelatedImage1"
                        app:layout_constraintTop_toBottomOf="@+id/iv_srchResultRelatedImage1" />

                    <TextView
                        android:id="@+id/tv_srchResultRelatedImage2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="@+id/iv_srchResultRelatedImage2"
                        app:layout_constraintStart_toStartOf="@+id/iv_srchResultRelatedImage2"
                        app:layout_constraintTop_toBottomOf="@+id/iv_srchResultRelatedImage2" />

                    <TextView
                        android:id="@+id/tv_srchResultRelatedImage3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="@+id/iv_srchResultRelatedImage3"
                        app:layout_constraintStart_toStartOf="@+id/iv_srchResultRelatedImage3"
                        app:layout_constraintTop_toBottomOf="@+id/iv_srchResultRelatedImage3" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="26dp"
                        android:text="이런 음식은 어떠세요?"
                        android:textColor="#454545"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/btn_foodsave"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/star1"
                app:layout_constraintStart_toEndOf="@+id/btn_review2"
                app:layout_constraintTop_toBottomOf="@+id/iv_srchResultImage" />

            <TextView
                android:id="@+id/tv_howMuchLikes"
                android:layout_width="341dp"
                android:layout_height="28dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="9dp"
                android:gravity="top"
                android:text="12"
                android:textColor="#323232"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_foodLike" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="115dp"
                android:layout_height="24dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="242dp"
                android:backgroundTint="#FFFFFF"
                android:text="명이 좋아합니다"
                android:textColor="#FF323232"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_howMuchLikes"
                app:layout_constraintTop_toBottomOf="@+id/btn_foodLike" />

            <TextView
                android:id="@+id/tv_srchResultResName"
                android:layout_width="351dp"
                android:layout_height="33dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp"
                android:gravity="bottom"
                android:text="식당이름"
                android:textColor="#444444"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_srchResultFoodName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/tv_srchResultFoodName"
                android:layout_width="351dp"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:text="메뉴이름"
                android:textColor="#555555"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultResName" />

            <TextView
                android:id="@+id/tv_srchResultFoodPrice"
                android:layout_width="351dp"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:text="가격"
                android:textColor="#555555"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultFoodName" />

            <TextView
                android:id="@+id/tv_srchResultResTel"
                android:layout_width="351dp"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:text="전화"
                android:textColor="#555555"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultFoodPrice" />

            <TextView
                android:id="@+id/tv_srchResultResAddress"
                android:layout_width="351dp"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:text="주소"
                android:textColor="#555555"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultResTel" />

            <TextView
                android:id="@+id/tv_srchResultResHour"
                android:layout_width="351dp"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:text="시간"
                android:textColor="#555555"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultResAddress" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="40dp"
                android:text="4.0"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_srchResultImage" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/iv_srchResultImage"
                app:srcCompat="@drawable/star2" />

            <Button
                android:id="@+id/btn_result_music"
                android:layout_width="157dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:text="AI 음악 듣기"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="검색하신 이미지로 음악을 만들어 봤어요!"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultResHour" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="(음악은 마이페이지에 자동 저장됩니다)"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_result_music" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="12dp"
                android:text="평점 :"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/imageView19"
                app:layout_constraintTop_toBottomOf="@+id/iv_srchResultImage" />

            <ImageView
                android:id="@+id/img_music"
                android:layout_width="41dp"
                android:layout_height="46dp"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toStartOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultResHour"
                tools:srcCompat="@drawable/ic_launcher_music_foreground" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>