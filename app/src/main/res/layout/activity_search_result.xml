<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
                app:srcCompat="@drawable/simple_line" />

            <Button
                android:id="@+id/btn_foodLike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/like_state"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_srchResultImage" />

            <Button
                android:id="@+id/btn_review2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bubble"
                app:layout_constraintBottom_toBottomOf="@+id/btn_foodLike"
                app:layout_constraintStart_toEndOf="@+id/btn_foodLike"
                app:layout_constraintTop_toTopOf="@+id/btn_foodLike" />

            <ImageView
                android:id="@+id/iv_srchResultImage"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="30dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/zambalaya" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_howMuchLikes"
                app:srcCompat="@drawable/simple_line" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.474"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultResTel"
                app:srcCompat="@drawable/simple_line" />

            <TextView
                android:id="@+id/tv_howMuchLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="42명이 좋아합니다"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_foodLike" />

            <TextView
                android:id="@+id/tv_srchResultFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="음식명"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp"
                android:typeface="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView12" />

            <TextView
                android:id="@+id/tv_srchResultFoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격 12000원"
                app:layout_constraintStart_toStartOf="@+id/tv_srchResultFoodName"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultFoodName" />

            <TextView
                android:id="@+id/tv_srchResultResAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울특별시 용산구 한남동 이태원로49길 13"
                app:layout_constraintStart_toStartOf="@+id/tv_srchResultResName"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultResName" />

            <TextView
                android:id="@+id/tv_srchResultResName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="식당명"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_srchResultFoodPrice"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultFoodPrice" />

            <TextView
                android:id="@+id/tv_srchResultResHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="영업시간 12:00 - 24:00"
                app:layout_constraintStart_toStartOf="@+id/tv_srchResultResAddress"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultResAddress" />

            <TextView
                android:id="@+id/tv_srchResultResTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연락처 02-797-8202"
                app:layout_constraintStart_toStartOf="@+id/tv_srchResultResHour"
                app:layout_constraintTop_toBottomOf="@+id/tv_srchResultResHour" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="이런 음식은 어떠신가요?"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView13" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView36">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_srchResultRelatedImage3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_srchResultRelatedImage2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/iv_srchResultRelatedImage2"
                        app:layout_constraintTop_toTopOf="@+id/iv_srchResultRelatedImage2"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_srchResultRelatedImage1"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/iv_srchResultRelatedImage2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="30dp"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_srchResultRelatedImage1"
                        app:layout_constraintStart_toEndOf="@+id/iv_srchResultRelatedImage1"
                        app:layout_constraintTop_toTopOf="@+id/iv_srchResultRelatedImage1"
                        app:layout_constraintVertical_bias="0.0"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/tv_srchResultRelatedImage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="@+id/iv_srchResultRelatedImage1"
                        app:layout_constraintStart_toStartOf="@+id/iv_srchResultRelatedImage1"
                        app:layout_constraintTop_toBottomOf="@+id/iv_srchResultRelatedImage1" />

                    <TextView
                        android:id="@+id/tv_srchResultRelatedImage2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="@+id/iv_srchResultRelatedImage2"
                        app:layout_constraintStart_toStartOf="@+id/iv_srchResultRelatedImage2"
                        app:layout_constraintTop_toBottomOf="@+id/iv_srchResultRelatedImage2" />

                    <TextView
                        android:id="@+id/tv_srchResultRelatedImage3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="@+id/iv_srchResultRelatedImage3"
                        app:layout_constraintStart_toStartOf="@+id/iv_srchResultRelatedImage3"
                        app:layout_constraintTop_toBottomOf="@+id/iv_srchResultRelatedImage3" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView16"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>