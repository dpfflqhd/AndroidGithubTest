<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startback"
    android:orientation="vertical"
    tools:context=".StartActivity">

    <Button
        android:id="@+id/btn_start_login"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="501dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#5D858585"
        android:text="LOGIN"
        android:textColor="#ECFFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#61898989"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start_join"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="98dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#5D858585"
        android:text="CREATE ACCOUNT"
        android:textColor="#ECFFFFFF"
        android:textSize="18sp"
        android:textStyle="normal"
        app:backgroundTint="#61898989"
        app:iconTint="#61898989"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_login" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="319dp"
        android:layout_height="196dp"
        android:layout_marginTop="216dp"
        android:layout_marginBottom="134dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logocolor" />


</androidx.constraintlayout.widget.ConstraintLayout>